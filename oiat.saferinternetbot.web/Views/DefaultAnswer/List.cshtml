@using System.Web.Mvc.Html
@model IEnumerable<oiat.saferinternetbot.Web.Models.DefaultAnswerTypeViewModel>
@{
    ViewBag.Title = "Einstellungen";
}

@Html.Partial("_Headline")
<div class="row">
    <div class="col-12">
        @if (Model.Any()) { 
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="text-right">
                            @Html.ActionLink("Anzeigen", "Index", new { type = (int)item.Type }, new { @class = "btn btn-info btn-sm" })
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>
