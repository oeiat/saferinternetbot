@model IEnumerable<oiat.saferinternetbot.web.Models.IntentViewModel>
@{
    ViewBag.Title = "Kategorien";
}
@Html.Partial("_Headline")
<div class="row">
    <div class="col-12">
        <p class="text-right">
            <small>(Diese werden direkt von LUIS abgeholt und angezeigt)</small>
        </p>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.CountAnswers)</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.CountAnswers)</td>
                    <td class="text-right">
                        @Html.ActionLink("Antworten anzeigen", "Index", "Answer", new {id = item.Id}, new {@class = "btn btn-info btn-sm"})
                    </td>
                </tr>
            }
            </tbody>
        </table>

    </div>
</div>
